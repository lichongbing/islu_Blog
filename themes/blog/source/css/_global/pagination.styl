.pagination
  display inline-block
  width 100%
  text-align center
  padding-top 30px
  color #666
  font-size 14px


  .disable
    background-color rgb(204, 204, 204) !important
    cursor not-allowed

  .fa-angle-right, .fa-angle-left
    font-size 14px
    line-height unset

  .prev, .next
    display inline-block
    width 38px
    line-height 38px
    height 38px
    padding 0
    background-color #00c4b6
    border-radius 50%
    color #fff
    font-size 0

  .prev
    float left
    margin-left 30px

  .next
    float right
    margin-right 30px

  .page-number
    display inline-block
    min-width 10rem
    min-height 38px
    line-height 38px
    font-size 1.5rem
    user-select none


