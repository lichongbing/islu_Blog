#rightside
  transition all .5s
  position fixed
  right 66px
  bottom 45px
  width 38px
  z-index 11

  a
    display flex
    width 38px
    height 38px
    color #fff
    margin-bottom 8px
    border-radius 19px
    cursor pointer
    box-shadow #aaa 2px 5px 10px
    text-align center
    -webkit-transition -webkit-transform .4s
    -moz-transition -moz-transform .4s
    -o-transition -o-transform .4s
    -ms-transition -ms-transform .4s
    transition transform .4s
    -webkit-transform translate(48px, 0)
    -moz-transform translate(48px, 0)
    -o-transform translate(48px, 0)
    -ms-transform translate(48px, 0)
    transform translate(48px, 0)

    i
      width 38px
      height 38px
      line-height 38px
      font-size 1.1rem

  a#open_toc
    background linear-gradient(to right, #2d78ad 0, #2d78ad 100%)
  a#comment
    background linear-gradient(to bottom right, #f99 0, #f66 100%)
  a#backTop
    background red
    visibility hidden
    i
      font-size 1.3rem